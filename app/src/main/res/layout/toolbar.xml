<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="4dp">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/menu" />

            <TextView
                android:id="@+id/time"
                fontPath="fonts/Roboto-ThinItalic.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="today"
                android:textColor="@color/text_color_primeray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title"
                fontPath="fonts/Roboto-ThinItalic.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color_primeray"
                android:textSize="28sp"/>

            <TextView
                fontPath="fonts/Roboto-ThinItalic.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="today"
                android:textColor="@color/text_color_primeray"
                android:textSize="18sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/eye"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:padding="10dp"
                android:src="@mipmap/eye" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/title_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/text_color_primeray"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:padding="10dp"
                android:src="@mipmap/eye"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorties_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/favorties_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/favorties"
                android:textColor="@color/text_color_primeray"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:padding="10dp"
                android:src="@mipmap/eye"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cache_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/cahce_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mycache"
                android:textColor="@color/text_color_primeray"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:padding="10dp"
                android:src="@mipmap/eye"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feedback_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/feedback_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/favorties"
                android:textColor="@color/text_color_primeray"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:padding="10dp"
                android:src="@mipmap/eye"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.Toolbar>
